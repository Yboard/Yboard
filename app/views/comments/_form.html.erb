<%= form_for(comment) do |f| %> <!-- checkがtrueならform送信 -->
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

  <% end %>

  <div class="field">
    <label><%= f.radio_button :agree, true %>賛成</label>
    <label><%= f.radio_button :agree, false %>反対</label>
  </div>
  <div class="field">
    <%= f.label "ユーザー名" %></br>
    <%= f.text_field :user_name, {:id => "user_name"} %> <!-- エンターキーで送信されないようにしたい -->
  </div>
  <div class="field">
    <%= f.label "コメント" %></br>
    <%= f.text_area :body, {:class => "text_field text_body", :id => "body"} %>
  </div>

  <%= f.hidden_field(:topic_id, value: topic_id) %>
  <div class="actions">
    <%= f.submit name="コメントする"%>
  </div>
<% end %>
